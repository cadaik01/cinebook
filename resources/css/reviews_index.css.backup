/* ==================== Public Reviews Page Styles ==================== */
/*
 * TABLE OF CONTENTS:
 * 1. Container & Layout
 * 2. Page Header
 * 3. Review Cards Grid
 * 4. Review Card Components
 * 5. Empty State
 * 6. Pagination
 * 7. Responsive Design
 */

/* ========== Container & Layout ========== */
.reviews-public-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px var(--space-5);
    min-height: 70vh;
}

/* ========== Page Header ========== */
.reviews-public-header {
    text-align: center;
    margin-bottom: 50px;
    padding-bottom: var(--space-6);
    border-bottom: 3px solid var(--prussian-blue);
}

.reviews-public-header h1 {
    font-size: 2.8em;
    margin: 0 0 var(--space-4) 0;
    color: var(--color-text-primary);
    font-weight: 700;
    font-family: var(--font-heading);
}

.reviews-public-header h1 i {
    color: var(--color-badge-upcoming);
    margin-right: var(--space-3);
}

.reviews-public-header .subtitle {
    font-size: 1.2em;
    color: var(--color-text-secondary);
    margin: 0;
}

/* ========== Review Cards Grid ========== */
.reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
}

/* ========== Review Card Components ========== */
.review-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.review-card-header {
    padding: 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.movie-info {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.movie-title {
    font-size: 1.3em;
    margin: 0;
    font-weight: 600;
    color: white;
    display: flex;
    align-items: center;
    gap: 8px;
}

.movie-title i {
    font-size: 0.9em;
}

.rating-display {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1.2em;
}

.star-filled {
    color: #ffd700;
}

.star-empty {
    color: rgba(255, 255, 255, 0.3);
}

.rating-badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8em;
    font-weight: 600;
}

.review-card-body {
    padding: 20px;
    flex-grow: 1;
    background: #f8f9fa;
}

.review-comment {
    color: #333;
    line-height: 1.7;
    margin: 0;
    font-size: 1em;
    font-style: italic;
}

.quote-icon {
    font-size: 0.8em;
    color: #aaa;
    vertical-align: middle;
}

.review-card-footer {
    padding: 15px 20px;
    background: white;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.reviewer-info {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #555;
    font-weight: 600;
}

.reviewer-info i {
    font-size: 1.3em;
    color: #667eea;
}

.reviewer-name {
    font-size: 0.95em;
}

.review-date {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #888;
    font-size: 0.9em;
}

.review-date i {
    font-size: 0.9em;
}

/* ========== Empty State ========== */
.no-reviews-card {
    text-align: center;
    padding: 80px 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.no-reviews-card i {
    font-size: 5em;
    color: #ddd;
    margin-bottom: 20px;
}

.no-reviews-card h3 {
    font-size: 2em;
    color: #555;
    margin: 0 0 15px 0;
}

.no-reviews-card p {
    font-size: 1.1em;
    color: #777;
    margin: 0 0 25px 0;
}

.btn-browse {
    display: inline-block;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.05em;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.btn-browse:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
    color: white;
}

.btn-browse i {
    margin-right: 8px;
}

/* ========== Pagination ========== */
.pagination-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 2px solid #e0e0e0;
}

.pagination-list {
    display: flex;
    list-style: none;
    gap: 8px;
    padding: 0;
    margin: 0;
}

.pagination-item {
    margin: 0;
}

.pagination-link {
    display: block;
    padding: 10px 16px;
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 6px;
    color: #555;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.pagination-link:hover {
    background: #667eea;
    border-color: #667eea;
    color: white;
    transform: translateY(-2px);
}

.pagination-item.active .pagination-link {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: #667eea;
    color: white;
}

.pagination-item.disabled .pagination-link {
    background: #f5f5f5;
    border-color: #e0e0e0;
    color: #ccc;
    cursor: not-allowed;
}

.pagination-item.disabled .pagination-link:hover {
    transform: none;
}

/* ==================== Responsive Design ==================== */

/* ========== Tablet (992px and below) ========== */
@media (max-width: 992px) {
    .reviews-public-container {
        padding: 30px 15px;
    }

    .reviews-public-header h1 {
        font-size: 2.2em;
    }

    .reviews-public-header .subtitle {
        font-size: 1.1em;
    }

    .reviews-grid {
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }
}

/* ========== Mobile (768px and below) ========== */
@media (max-width: 768px) {
    .reviews-public-container {
        padding: 20px 10px;
    }

    .reviews-public-header h1 {
        font-size: 1.8em;
    }

    .reviews-public-header .subtitle {
        font-size: 1em;
    }

    .reviews-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .review-card-footer {
        flex-direction: column;
        gap: 10px;
        align-items: flex-start;
    }

    .pagination-list {
        flex-wrap: wrap;
        gap: 5px;
    }

    .pagination-link {
        padding: 8px 12px;
        font-size: 0.9em;
    }
}

/* ========== Small Mobile (480px and below) ========== */
@media (max-width: 480px) {
    .reviews-public-header h1 {
        font-size: 1.5em;
    }

    .movie-title {
        font-size: 1.1em;
    }

    .review-comment {
        font-size: 0.95em;
    }

    .no-reviews-card {
        padding: 60px 15px;
    }

    .no-reviews-card i {
        font-size: 3.5em;
    }

    .no-reviews-card h3 {
        font-size: 1.5em;
    }
}
